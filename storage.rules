
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow unauthenticated users to upload files only to the 'cases' directory
    match /cases/{caseId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.token.email == 'admin@neobridge.com';
      allow write: if request.auth == null;
    }
  }
}
