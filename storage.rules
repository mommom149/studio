
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to upload files for a case submission.
    // In a real app, you'd want to validate file size, type, etc.
    match /cases/{caseId}/{allPaths=**} {
      allow read, write: if true;
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
