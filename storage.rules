
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read/write access to the 'cases' folder for file uploads
    match /cases/{caseId}/{allPaths=**} {
      allow read, write: if true;
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
