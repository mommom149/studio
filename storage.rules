rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow public write (upload) only to the 'cases' directory
    match /cases/{caseId}/{fileName} {
      allow write: if true;
    }
  }
}
