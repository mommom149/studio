rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Hospitals can be read by any authenticated user (for admin panel)
    // and can only be updated by the corresponding logged-in hospital user.
    match /hospitals/{hospitalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email.split('@')[0] == hospitalId;
    }

    // Cases can be created by anyone.
    // They can be read by anyone (for case status check).
    // They can only be updated by the admin user.
    match /cases/{caseId} {
      allow create: if true;
      allow read: if true;
      allow update: if request.auth != null && request.auth.token.email == 'admin@neobridge.com';
    }
  }
}
