
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to submit a new case.
    // In a real app, you would add validation here.
    match /cases/{caseId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.uid != null;
    }
    
    // Allow hospital users to read and update their own document.
    match /hospitals/{hospitalId} {
       allow read, write: if request.auth != null && request.auth.token.email.split('@')[0] == hospitalId;
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
