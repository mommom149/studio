
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to the 'cases' collection
    match /cases/{caseId} {
      allow read, write: if true;
    }

    // Allow public read access to the 'hospitals' collection
    match /hospitals/{hospitalId} {
      allow read: if true;
      // Only authenticated users can write (update bed counts)
      allow write: if request.auth != null;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
