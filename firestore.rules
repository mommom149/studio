
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to hospitals for the admin dashboard
    match /hospitals/{hospitalId} {
      allow read: if true;
      // Allow only authenticated hospital users to update their own document
      allow write: if request.auth != null && request.auth.uid == hospitalId;
    }

    // Allow admins to read/write all cases
    // Allow unauthenticated users to CREATE cases, but not read/update/delete
    match /cases/{caseId} {
      allow read, write: if request.auth != null && request.auth.token.email == 'admin@neobridge.com';
      allow create: if request.auth == null;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
