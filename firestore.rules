rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all collections
    match /{document=**} {
      allow read: if true;
    }

    // Allow public write access for creating new cases
    match /cases/{caseId} {
      allow write: if true;
    }

    // Allow public write access for hospitals to update their own data.
    // In a real app, you'd want to secure this with authentication.
    match /hospitals/{hospitalId} {
      allow write: if true;
    }
  }
}